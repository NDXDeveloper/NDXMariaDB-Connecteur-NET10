# ============================================================================
# NDXMariaDB - Configuration MariaDB personnalisée
# ============================================================================
# Ce fichier contient les paramètres de configuration optimisés
# pour l'environnement de développement et de tests.
#
# Auteur: Nicolas DEOUX <NDXDev@gmail.com>
# ============================================================================

[mysqld]
# Encodage par défaut
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Paramètres InnoDB
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 2
innodb_lock_wait_timeout = 120

# Connexions
max_connections = 100
wait_timeout = 28800
interactive_timeout = 28800

# Performance
query_cache_type = 0
query_cache_size = 0
tmp_table_size = 32M
max_heap_table_size = 32M

# Logging (pour debug)
# general_log = 1
# general_log_file = /var/log/mysql/general.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Binlog (désactivé pour les tests, activer si nécessaire)
skip-log-bin

# Sécurité
local_infile = 0

# Event Scheduler (pour les tâches planifiées)
event_scheduler = ON

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
